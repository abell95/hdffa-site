.subnav
  .title
    %h1 Partners
  .actions
    = link_to 'New Partner', new_admin_partner_path, class: 'primary'

%table.table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
    - @partners.each do |partner|
      %tr
        %td= link_to partner.name, [:admin, partner]
        %td
          = link_to 'Edit', edit_admin_partner_path(partner), class: 'btn btn-sm btn-outline-primary'
          = link_to 'Delete', [:admin, partner], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' if @current_user.superadmin? if @current_user.superadmin?
