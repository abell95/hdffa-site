.subnav
  .title
    %h1= @provider.name

%dl.row
  %dt.col-sm-3 Latitude
  %dd.col-sm-9= @provider.latitude
  %dt.col-sm-3 Longitude
  %dd.col-sm-9= @provider.longitude
  %dt.col-sm-3 Description
  %dd.col-sm-9= @provider.description
  %dt.col-sm-3 Street Address
  %dd.col-sm-9= @provider.street_address
  %dt.col-sm-3 City
  %dd.col-sm-9= @provider.city
  %dt.col-sm-3 State
  %dd.col-sm-9= @provider.state
  %dt.col-sm-3 Zip Code
  %dd.col-sm-9= @provider.zip
  %dt.col-sm-3 Email
  %dd.col-sm-9
    %a{:href => "mailto:#{@provider.email}"} #{@provider.email}
  %dt.col-sm-3 Phone
  %dd.col-sm-9= @provider.phone
  %dt.col-sm-3 Website
  %dd.col-sm-9= @provider.url
  %dt.col-sm-3 Hours Of Operation
  %dd.col-sm-9= @provider.hours_of_operation
  %dt.col-sm-3 Keywords
  %dd.col-sm-9= @provider.keywords
